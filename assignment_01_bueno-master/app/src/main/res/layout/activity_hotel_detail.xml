<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelDetailActivity">

    <Button
        android:id="@+id/btnHotelselect"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginLeft="77dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:layout_marginBottom="38dp"
        android:text="Select Hotel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/hotel_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="300dp" />
    <!-- price of hotel-->
    <TextView
        android:id="@+id/hotel_price"
        android:layout_width="83dp"
        android:layout_height="34dp"
        android:layout_below="@+id/hotel_name"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/hotel_price_symbol"
        android:layout_toRightOf="@+id/hotel_price_symbol"
        android:text="TextView"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="1.0" />
    <!-- symbol for money '$'-->
    <TextView
        android:id="@+id/hotel_price_symbol"
        android:layout_width="16dp"
        android:layout_height="24dp"
        android:layout_below="@+id/hotel_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:text="$"
        android:textColor="@color/colorGreen"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.017" />
    <!-- rating for hotel-->
    <RatingBar
        android:id="@+id/ratingBarHotel"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotel_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="175dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_toEndOf="@+id/hotel_price"
        android:layout_toRightOf="@+id/hotel_price"
        android:numStars="5"
        android:stepSize="0.5" />

    <TextView
        android:id="@+id/hotelDec"
        android:layout_width="wrap_content"
        android:layout_height="283dp"
        android:layout_above="@+id/btnHotelselect"
        android:layout_below="@+id/hotel_price"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:text="TextView" />
</RelativeLayout>